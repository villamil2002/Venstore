@model IEnumerable<Proyecto04.Models.DBclientesYULY>

@{
    ViewBag.Title = "Administrar informacion de clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Administrar informacion de clientes</h2>

<p>
  <!--  @Html.ActionLink("Create New", "Create") -->
    <a href="@Url.Action("create","DBclientes")" class="btn  btn.primary">Crear cliente</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdDocumento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.IdDocumento)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Nombres)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Apellidos)
    </td>
    <td>
        @Html.ActionLink("Actualizar", "Edit", new { id = item.IdDocumento }, new { @class = "btn btn-success" }) 
        @Html.ActionLink("Consulta", "Details", new { id = item.IdDocumento }, new { @class= "btn btn-Info" }) 
        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdDocumento }, new { @class = "btn btn-danger" })
    </td>
</tr>
}

</table>
